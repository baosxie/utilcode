@abstract '../_config.mcss';

.m-requeststeps{
	position:relative;zoom:1;padding:21px 0 40px;text-align:center;
	ul{position:relative;z-index:1;}
	li{float:left;width:240px;margin-right:43px;font-size:14px;color:#666;}
	.itm4{margin:0;}
	.icon{$inline-block();width:40px;height:40px;line-height:40px;text-align:center;font-size:14px;color:#000;@extend bg-icon2;background-position:-50px 0;}
	h3{margin:8px 0 0;}
	.active{
		color:#000;
		.icon{color:#fff;background-position: 0 0;}
	}
	.line{position:absolute;left:122px;top:40px;width:836px;border-top:1px solid #e1e1e1;}
}
.m-box{
	position:relative;margin:0 0 20px;background:#fff;
	.hd{
		padding:16px 20px;border-bottom:1px solid #eaeaea;line-height:18px;
		h2{font-size:16px;font-weight:bold;border-left:2px solid $fc5;padding-left:5px;}
	}
	

	.bd{
		position:relative;zoom:1;padding:22px 30px 40px;
	}
	&-1{
		z-index:1;
		.bd{padding-top:20px;}
	}
	/* for step4 */
	.m-returnrst{
		a,a:hover{color:#5893cd;}
		.hd{
			padding:18px 30px;font-size:16px;line-height:44px;
			h2{@extend bg-icon2;background-position:-106px -666px;padding-left:54px;border:0;font-weight:normal;}
		}
		.succss h2{background-position: -106px -736px;}
		&-suc .hd h2{background-position:-105px -736px;}
		p{line-height:24px;font-size:14px;padding-bottom:10px;}
		.itm{padding-right:30px;}
		.big{font-size:24px;font-weight:bold;color:$fc5;}
		.sml{font-size:12px;color:$fc5;}
		.tit{margin-right:5px;color:$fc3;$inline-block();min-width:100px;}
	}
}
