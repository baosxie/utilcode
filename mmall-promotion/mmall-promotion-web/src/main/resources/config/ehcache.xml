<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<!-- DefaultCache setting. -->
	<defaultCache maxBytesLocalHeap="50M"
		memoryStoreEvictionPolicy="LRU" eternal="false" timeToIdleSeconds="300"
		timeToLiveSeconds="300" overflowToDisk="false" diskPersistent="false" />

	<!-- Special objects setting. -->
	<cache name="promotionCache" maxBytesLocalHeap="10M"
		memoryStoreEvictionPolicy="LRU" eternal="false" timeToIdleSeconds="300"
		timeToLiveSeconds="1200" overflowToDisk="false" diskPersistent="false" />
		
	<!-- user point -->
	<cache name="userPointCache" maxBytesLocalHeap="20M" memoryStoreEvictionPolicy="LRU"
		eternal="false" timeToIdleSeconds="1800" timeToLiveSeconds="1800" overflowToDisk="false"
		diskPersistent="false"/>
		
	<!-- point rule -->
	<cache name="pointRuleCache" maxBytesLocalHeap="20M" memoryStoreEvictionPolicy="LRU"
		eternal="false" timeToIdleSeconds="1800" timeToLiveSeconds="1800" overflowToDisk="false"
		diskPersistent="false"/>
</ehcache>
